{
  "name": "QuizGPT",
  "version": "2.1.0",
  "description": "A browser extension to assist with quizzes using OpenAI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "QuizGPT"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.kahoot.it/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/injected.js"],
      "matches": ["*://*.kahoot.it/*"]
    }
  ],
  "background": {
    "service_worker": "scripts/autoresponder.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*.kahoot.it/*",
    "https://api.quizgpt.site/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "homepage_url": "https://quizgpt.site"
}
